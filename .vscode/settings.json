{
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "C_Cpp.formatting": "clangFormat",
    "C_Cpp.clang_format_style": "file", // 使用项目中的 .clang-format 文件
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "[cuda]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "files.associations": {
        "*.cu": "cuda-cpp",
        "*.cuh": "cuda-cpp"
    },
    "clangd.arguments": [
        "--query-driver=/usr/local/cuda/bin/nvcc", // 指定 nvcc 路径
        "--compile-commands-dir=${workspaceFolder}/build",
    ],
}